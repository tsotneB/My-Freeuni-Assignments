        app:civ_border_color="@color/application_blue"
        app:civ_border_width="@dimen/z"
        app:civ_shadow="true"
        app:civ_shadow_radius="@dimen/sign_up_margin"
        app:civ_shadow_color="@color/application_blue_variant"/>

