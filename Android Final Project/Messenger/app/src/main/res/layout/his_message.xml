<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/sign_up_margin"
    android:layout_marginBottom="@dimen/sign_up_margin">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/chat_chat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/img_marg"
        tools:text="@string/t"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/chat_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/tb_av"
        android:layout_marginStart="@dimen/avatar_margin"
        android:background="@drawable/his_chat_border"
        android:backgroundTint="@color/light"
        tools:text="@string/t"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/msg_text"
        android:paddingHorizontal="@dimen/rc_marg"
        android:paddingVertical="@dimen/rc_marg"/>
</androidx.constraintlayout.widget.ConstraintLayout>